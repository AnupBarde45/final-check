<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F8C1"
    tools:context=".MainActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="313dp"
        android:layout_height="79dp"
        android:src="@drawable/logo"
        android:layout_marginTop="40dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        tools:ignore="MissingConstraints" />

    <!-- SOS Button -->
    <ImageButton
        android:id="@+id/sosButton"
        android:layout_width="194dp"
        android:layout_height="203dp"
        android:background="@null"
        android:contentDescription="SOS Button"
        android:scaleType="centerCrop"
        android:src="@drawable/sos_button"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        tools:ignore="MissingConstraints" />

    <!-- Bottom Section -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800020"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">

        <!-- User Information -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:paddingBottom="10dp" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:textSize="18sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/user_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="State: "
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:paddingBottom="10dp"/>

        <!-- Logout Button -->
        <Button
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="15dp"/>

        <!-- Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:paddingBottom="10dp">

            <!-- Emergency Contacts -->
            <Button
                android:id="@+id/emergencyContactsButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#B22222"
                android:padding="12dp"
                android:text="Emergency Contacts"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <!-- Guidelines -->
            <Button
                android:id="@+id/btnGuidelines"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#B22222"
                android:padding="12dp"
                android:text="Guidelines"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

            <!-- Video Call -->
            <Button
                android:id="@+id/videoCallButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#B22222"
                android:padding="12dp"
                android:text="Start Video Chat"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
